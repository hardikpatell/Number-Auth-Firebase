<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="18dp" />
            <stroke android:width="1dip" android:color="#00FAC2" />
            <gradient android:angle="-90" android:startColor="#66F5B0" android:endColor="#00ADC1"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="18dp" />
            <gradient android:angle="-90" android:startColor="#00ADC1" android:endColor="#66F5B0" />
        </shape>
    </item>
</selector>